<odoo>

    <!--
    Disable account journal kanban view because the function get_line_graph_datas
    and get_journal_dashboard_datas are hard coded with SQL request. So security
    is not ensured
    -->
    <record id="account.menu_board_journal_1" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('base_fiscal_company.fiscal_company_disabled_feature')])]"/>
    </record>

    <record id="view_account_journal_search" model="ir.ui.view">
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_search" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="company_id" groups="base.group_multi_company"/>
                <filter name="company_id" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
            </field>
        </field>
    </record>

</odoo>
